{
  "version": 2,
  "name": "picozen-server",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/admin",
      "dest": "/api/admin"
    },
    {
      "src": "/images/(.*)",
      "dest": "/api/images/$1"
    },
    {
      "src": "/files/(.*)",
      "dest": "/api/files/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_PATH": "/tmp/picozen.db",
    "ADMIN_PASSWORD": "admin123"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}