# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/picozen.db

# Security
ADMIN_PASSWORD=admin123
JWT_SECRET=your-super-secret-jwt-key-here

# File Storage
MAX_FILE_SIZE=500MB
UPLOAD_DIR=./uploads

# CORS Origins (comma-separated for production)
CORS_ORIGINS=https://ycccrlab.github.io,https://picozen.app

# External URLs
CDN_BASE_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api

# Optional: Database URL for PostgreSQL (instead of SQLite)
# DATABASE_URL=postgresql://username:password@localhost:5432/picozen

# Optional: S3 Configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=picozen-files